<div class= "container d-flex flex-column">

        <div class="container d-flex justify-content-between m-4 border">
          <img src="<%= @user.photo %>" >
          <h1 class="user-head"><%= @user.name %></h1>
          <p class="user-para">Number of posts: <%= @user.posts_counter || 0 %></p>
        </div>

        <div class="container d-flex flex-column m-4 border">
          <h3>Bio: </h3>
          <p><%= @user.bio %></p>
        </div>
        
       <% @user.last_posts.each_with_index do |post, index| %>
        <div class="container d-flex flex-column m-4 border">
         <p>post# <%= index %></p>
         <h2><%= post.title %></h2>
         <p><%= post.text %></p>
         <div class="d-flex justify-content-start">
            <span>Comments:<%= post.comments_counter || 0 %></span>
            <span>Likes:<%= post.likes_counter || 0 %></span>
         </div>
        </div>
      
       <% end %>
       <div class="d-flex justify-content-center">
          <button class="btn btn-outline-dark" type="button"> <%= link_to "See all posts", user_post_path(@user) %></button>
       </div>

</div>