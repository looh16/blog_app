<div class= "container d-flex flex-column">
     <div class="container d-flex justify-content-between m-4 border">
          <img src="<%= @user.photo %>" >
          <h1><%= @user.name %></h1>
          <p>Number of posts: <%= @user.posts_counter || 0 %></p>
      </div>

  <% @user.last_posts.each_with_index do |post, index| %>
  <div class="container d-flex flex-column m-4 border">
     <p>post# <%= index %></p>
          <h2 class="no_underline"><%= link_to post.title, post_detail_path(@user, post) %></h2>
          <p><span><%= post.text%></span> </p>
           <div class="d-flex justify-content-end">
            <span>Comments:<%= post.comments_counter || 0 %></span>
            <span>Likes:<%= post.likes_counter || 0 %></span>
         </div>
   </div>
  <% end %>
  <div class="d-flex justify-content-center">
          <button class="btn btn-outline-dark" type="button">pagination</button>
       </div>
</div>